<h1>Добро пожаловать в PizzaShop!</h1>

<div class="row">
	<% @products.each do |p| %>
		<div class="col-md-3">
			<div>
				<h2><%= p.title %></h2>
			</div>

			<div>
				<img src="<%= p.path_to_image %>"style="width: 100%; max-width: 200px;"/>
			</div>

			<div>
				<%= p.description %>
			</div>
			
			<div>
				Размер: <%= p.size %> см.
			</div>

			<div>
				<i><%= p.price %> руб.</i>
			</div>

			<div>
				<button class="btn btn-success" onclick="add_to_cart(<%= p.id %>)">Добавить в корзину</button>
			</div>
		</div>

	<%end%>
</div>

</br>
</br>
