<h2>Ваша корзина</h2>


<div id="cart">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Название</th>
				<th>Количество</th>
				<th>Цена</th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>
			<tr>
				<td><%= item[0].title %></td>
				<td><%= item[1] %></td>
				<td><%= item[0].price %></td>
			</tr>
			<% end %>

		    <tr class="total-row">
		      <td colspan="1" class="text-end"><strong>Итого:</strong></td>
		      <td><strong><%= @quantity_all %></strong></td>
		      <td><strong><%= @total %> руб.</strong></td>
		    </tr>

		</tbody>

	</table>

	<form action="/place_order" method="post" role="form">

		<input name="order[orders_input]" type="hidden" value="<%= @orders_input %>" />

		<div class="form-group">
			<label>Имя:</label>
			<input name="order[name]" type="text" class="form-control" placeholder="Ваше имя">
		</div>

		<div class="form-group">
			<label>Телефон:</label>
			<input name="order[phone]" type="text" class="form-control" placeholder="Ваш телефон">
		</div>

		<div class="form-group">
			<label>Адрес доставки:</label>
			<input name="order[address]" type="text" class="form-control" placeholder="Ваш адрес доставки">
		</div>

		<button type="submit" class="btn btn-success">Заказать!</button>
		<button class="btn btn-danger" onclick="return cancel_order()">Очистить корзину</button>

	</form>
</div>
